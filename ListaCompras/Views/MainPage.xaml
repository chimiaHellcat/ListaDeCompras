<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ListaCompras.ViewModels"
             xmlns:models="clr-namespace:ListaCompras.Models"
             x:Class="ListaCompras.Views.MainPage">

    <ContentPage.Content>
        <VerticalStackLayout Padding="20" Spacing="10">

            <Label Text="Lista de Compras"
                   FontSize="24"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"/>

            <Entry Placeholder="Digite o produto"
                   Text="{Binding Descricao}" />

            <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                <Button Text="Adicionar" Command="{Binding AdicionarProdutoCmd}" />
                <Button Text="Remover" Command="{Binding RemoverProdutoCmd}" />
                <Button Text="Alterar" Command="{Binding AlterarProdutoCmd}" />
            </HorizontalStackLayout>

           
            <CollectionView ItemsSource="{Binding ListaProdutos}">
                <CollectionView.ItemTemplate>
                 
                    <DataTemplate x:DataType="models:ProdutoModel">
                        <Grid Padding="8"
                              ColumnDefinitions="40,*"
                              Margin="0,5">

                            <CheckBox IsChecked="{Binding IsSelected}"
                                      VerticalOptions="Center"
                                      CheckedChanged="CheckBox_CheckedChanged"/>

                            <Label Grid.Column="1"
                                   Text="{Binding Descricao}"
                                   VerticalOptions="Center"
                                   FontSize="18">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label"
                                                 Binding="{Binding IsSelected}"
                                                 Value="True">
                                    
                                        <Setter Property="TextDecorations" Value="Strikethrough" />
                                        <Setter Property="TextColor" Value="Gray" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>

                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
